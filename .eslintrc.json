

{
  "extends": "next/core-web-vitals",
  "rules": {
    "no-undef": "error",
    "no-unused-vars": "warn",
    "no-unused-expressions": "warn",
    "no-extra-semi": "warn"
  },
  "overrides": [
    {
      "files": ["*.js","*.mjs", "*.ts", "*.mts"],
      "parser": "espree", 
      "parserOptions": {
        "ecmaVersion": "latest"
      }
    }
  ],
  "env": {
    "browser": true,
    "es6": true
  }
}